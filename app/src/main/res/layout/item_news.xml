<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/tibia_surface"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp"
    app:strokeColor="@color/tibia_gold"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvNewsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/tibia_text_light"
            android:maxLines="3"
            android:ellipsize="end" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvNewsType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/tibia_gold"
                android:textStyle="bold"
                android:paddingEnd="8dp"
                android:paddingStart="0dp"/>

            <View
                android:layout_width="1dp"
                android:layout_height="16dp"
                android:background="@color/tibia_gold"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tvNewsCategory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvNewsDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/tibia_text_light"
                android:alpha="0.7"/>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
