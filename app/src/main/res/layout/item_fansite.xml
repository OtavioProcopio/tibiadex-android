<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/tibia_surface"
    android:padding="12dp"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/imgFansiteLogo"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginEnd="12dp"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvFansiteName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/tibia_gold_light"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/tibia_text_light"
            android:textSize="13sp"
            android:layout_marginBottom="6dp"/>

        <TextView
            android:id="@+id/tvContentTypes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/tibia_text_light"
            android:textSize="12sp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvSocialMedia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/tibia_text_light"
            android:textSize="12sp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvLanguages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/tibia_gold"
            android:textSize="12sp"
            android:visibility="gone"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvSpecials"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/tibia_text_light"
            android:textSize="12sp"
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>
