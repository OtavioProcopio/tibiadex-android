<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/tibia_surface"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp"
    app:strokeColor="@color/tibia_gold"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imgFansiteLogo"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="16dp"
            android:visibility="gone"
            android:contentDescription="Fansite logo"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvFansiteName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/tibia_text_light"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/tibia_gold"
                android:textSize="13sp"
                android:layout_marginBottom="6dp"/>

            <TextView
                android:id="@+id/tvContentTypes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/tibia_text_light"
                android:textSize="12sp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tvSocialMedia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/tibia_text_light"
                android:textSize="12sp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tvLanguages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/tibia_gold_light"
                android:textSize="12sp"
                android:visibility="gone"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tvSpecials"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/tibia_text_light"
                android:textSize="12sp"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
