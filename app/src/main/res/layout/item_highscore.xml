<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/tibia_surface"
    android:padding="12dp"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/tvRank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#1"
        android:textColor="@color/tibia_gold"
        android:textStyle="bold"
        android:textSize="20sp"
        android:minWidth="50dp"
        android:layout_marginEnd="12dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/tibia_gold_light"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="2dp"/>

        <TextView
            android:id="@+id/tvVocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/tibia_text_light"
            android:textSize="14sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end">

        <TextView
            android:id="@+id/tvLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level: 1225"
            android:textColor="@color/tibia_text_light"
            android:textSize="13sp"
            android:layout_marginBottom="2dp"/>

        <TextView
            android:id="@+id/tvValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valor: 108"
            android:textColor="@color/tibia_gold_light"
            android:textSize="13sp"/>

    </LinearLayout>

</LinearLayout>
