<com.google.android.material.card.MaterialCardView
    android:id="@+id/cardRoot"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@color/tibia_surface"
    app:strokeColor="@color/tibia_gold"
    app:strokeWidth="2dp">

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- NOME -->
        <TextView
            android:id="@+id/tvCharName"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/tibia_text_light"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shadowColor="@color/tibia_gold"
            android:shadowRadius="8"/>

        <!-- TÃTULO -->
        <TextView
            android:id="@+id/tvCharTitle"
            android:textSize="15sp"
            android:textColor="@color/tibia_gold_light"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:visibility="gone"
            android:fontFamily="serif"
            android:textStyle="italic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- CLASSE / LEVEL / WORLD -->
        <TextView
            android:id="@+id/tvCharMainInfo"
            android:textSize="16sp"
            android:textColor="@color/tibia_blue"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- DIVISOR -->
        <View
            android:layout_marginVertical="16dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/tibia_gold"/>

        <!-- BADGES -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                app:cardCornerRadius="6dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/tibia_gold">
                
                <TextView
                    android:id="@+id/tvAccountStatus"
                    android:padding="8dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/tibia_text_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="6dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/tibia_blue_dark"
                app:strokeColor="@color/tibia_blue"
                app:strokeWidth="1dp">
                
                <TextView
                    android:id="@+id/tvAchievementPoints"
                    android:padding="8dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/tibia_text_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- INFO SECTION -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/tibia_background"
            app:strokeColor="@color/tibia_blue_dark"
            app:strokeWidth="1dp">
            
            <TextView
                android:id="@+id/tvCharDetails"
                android:padding="16dp"
                android:textSize="14sp"
                android:textColor="@color/tibia_text_light"
                android:lineSpacingExtra="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- FORMER NAMES -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardFormerNames"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/tibia_background"
            app:strokeColor="@color/tibia_purple"
            app:strokeWidth="1dp">
            
            <TextView
                android:id="@+id/tvFormerNames"
                android:padding="16dp"
                android:textSize="13sp"
                android:textColor="@color/tibia_purple"
                android:lineSpacingExtra="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
