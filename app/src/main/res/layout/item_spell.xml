<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/tibia_surface"
    android:padding="12dp"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/imgSpell"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="12dp"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvSpellName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/tibia_gold_light"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvFormula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/tibia_text_light"
            android:textSize="14sp"
            android:fontFamily="monospace"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvLevelMana"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/tibia_text_light"
            android:textSize="13sp"
            android:layout_marginBottom="2dp"/>

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/tibia_gold"
            android:textSize="13sp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvGroups"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/tibia_text_light"
            android:textSize="12sp"
            android:layout_marginBottom="2dp"/>

        <TextView
            android:id="@+id/tvTypes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/tibia_text_light"
            android:textSize="12sp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvVocations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/tibia_text_light"
            android:textSize="12sp"
            android:visibility="gone"
            android:layout_marginBottom="2dp"/>

        <TextView
            android:id="@+id/tvCooldown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/tibia_text_light"
            android:textSize="12sp"
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>
