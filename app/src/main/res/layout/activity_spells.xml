<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tibia_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="24dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â¬… Voltar"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spells"
            android:textColor="@color/tibia_gold_light"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Buscar spell..."
            android:textColor="@color/tibia_text_light"
            android:textColorHint="@color/tibia_text_light"
            android:background="@color/tibia_surface"
            android:padding="12dp"
            android:layout_marginBottom="12dp"/>

        <HorizontalScrollView
            android:id="@+id/layoutFilters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Todos"
                    android:layout_marginEnd="8dp"/>

                <Button
                    android:id="@+id/btnAttack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âš”ï¸ Ataque"
                    android:layout_marginEnd="8dp"/>

                <Button
                    android:id="@+id/btnHealing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â¤ï¸ Cura"
                    android:layout_marginEnd="8dp"/>

                <Button
                    android:id="@+id/btnSupport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ›¡ï¸ Suporte"
                    android:layout_marginEnd="8dp"/>

                <Button
                    android:id="@+id/btnInstant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âš¡ InstantÃ¢nea"
                    android:layout_marginEnd="8dp"/>

                <Button
                    android:id="@+id/btnRune"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“œ Runa"/>

            </LinearLayout>
        </HorizontalScrollView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerSpells"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"/>

</FrameLayout>
