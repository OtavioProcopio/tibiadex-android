<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tibia_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="24dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â¬… Voltar"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Criaturas"
            android:textColor="@color/tibia_gold_light"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginBottom="12dp"/>

        <!-- Criatura Boostada -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Criatura Boostada do Dia"
            android:textColor="@color/tibia_gold_light"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/tibia_surface"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/imgBoosted"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:id="@+id/tvBoostedName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/tibia_text_light"
                android:textSize="16sp"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Buscar criatura..."
            android:textColor="@color/tibia_text_light"
            android:textColorHint="@color/tibia_text_light"
            android:background="@color/tibia_surface"
            android:padding="12dp"
            android:layout_marginBottom="12dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerCreatures"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"/>

</FrameLayout>
